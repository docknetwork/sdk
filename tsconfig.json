{
  "compilerOptions": {
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "module": "Node16", // or "NodeNext"
    "target": "ESNext",
    "moduleResolution": "Node16", // or "NodeNext"
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.js",
    "example/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
